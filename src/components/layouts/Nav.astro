---
import { toTitleCase } from '$/utils'
import { NAV_ITEMS } from '$/config'
---

<nav class="nav py-3">
  <ul class="nav-list">
    {
      Object.keys(NAV_ITEMS).map((navItemKey) => (
        <li>
          <a
            class:list={[
              'pb-1 hover:border-b-2 hover:border-gray-400 hover:dark:border-gray-700 font-menlo',
              Astro.url.pathname === NAV_ITEMS[navItemKey].path
                ? 'border-theme-primary hover:border-theme-primary hover:dark:border-theme-primary border-b-2'
                : '',
            ]}
            href={NAV_ITEMS[navItemKey].path}
            title={NAV_ITEMS[navItemKey].title}
          >
            {toTitleCase(NAV_ITEMS[navItemKey].title)}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
<style>
  .nav-list {
    @apply inline-flex list-none gap-8 text-xl font-semibold py-2 flex-wrap md:mb-8;
  }
</style>
