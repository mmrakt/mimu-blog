---
import { SITE } from '$/config'
import SvgIcon from '$/components/elements/SvgIcon.astro'
import ModeSwitcherBtn from '$/components/elements/ModeSwitcherBtn.svelte'
import HeaderIcon from '$/components/layouts/HeaderIcon.svelte'
---

<header class="flex gap-4 border-b pt-8 pb-3">
  <div class="header__meta flex justify-between flex-1">
    <div
      class="text-lg font-extrabold text-theme-secondary dark:text-theme-dark-secondary flex"
    >
      <a
        href="/"
        class="flex items-center text-3xl font-menlo"
        aria-label="go top page"
      >
        <!-- <HeaderIcon client:visible /> -->
        mimu-memo
      </a>
    </div>
    <nav class="header__nav flex self-end">
      <ul class="flex gap-3 text-gray-400">
        <li>
          <a
            target="_blank"
            href={SITE.githubUrl}
            title={`${SITE.name}'s Github URL'`}
          >
            <SvgIcon>
              <path
                d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"
              >
              </path>
            </SvgIcon>
          </a>
        </li>
        <li>
          <ModeSwitcherBtn client:visible />
        </li>
      </ul>
    </nav>
  </div>
</header>
