---
import type { TagCount } from '$/types'

const {
  items,
  textSize = 'sm',
  visibleCount = false,
} = Astro.props as {
  items: TagCount[]
  textSize: 'sm' | 'base' | 'lg'
  visibleCount?: boolean
}
---

<ul class="list-none py-2 flex flex-wrap gap-2">
  {
    items.map((item) => (
      <a
        class:list={[
          'font-menlo flex gap-1 md:gap-3 items-center inline-block text-sm px-4 py-1 rounded-full bg-theme-dark-primary dark:bg-theme-primary hover:bg-purple-400 dark:hover:bg-purple-600',
          textSize === 'lg' && 'text-base md:text-lg',
          textSize === 'base' && 'text-sm md:text-base',
        ]}
        href={`/tags/${item.name}`}
        title={item.name}
      >
        {item.name}
        {visibleCount && (
          <div class="flex items-center dark:text-theme-primary dark:bg-theme-dark-primary px-2 rounded-full bg-theme-primary text-white">
            {item.count}
          </div>
        )}
      </a>
    ))
  }
</ul>
