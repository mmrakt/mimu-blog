---
import type { MediaType, Tag } from '$/types'

type Props = {
  tag?: Tag
  media?: MediaType
  link: string
}
const { tag = '', media = '', link } = Astro.props as Props
const imageName = tag ? tag : media ? media : 'unknown'
---

<img
  src={`/images/${imageName}.svg`}
  width="200"
  height="200"
  alt={imageName}
  transition:name={`image:${link}`}
  class="mx-auto md:w-[200px] md:h-[200px] w-[120px] h-[120px]"
/>
