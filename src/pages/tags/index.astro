---
export const prerender = true

import { getCollection } from 'astro:content'
import DefaultPageLayout from '$/layouts/default.astro'
import TagList from '$/components/elements/TagList.astro'
import { calcTagCountByCollection } from '$/utils/index'

let title = 'All Tags'
let description = 'All the tags used so far...'

const collection = await getCollection('owned')
const tagMap = calcTagCountByCollection(collection)
---

<DefaultPageLayout content={{ title, description }}>
  <TagList items={tagMap} textSize="lg" visibleCount />
</DefaultPageLayout>
