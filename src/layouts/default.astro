---
import { SITE } from '$/config'
import BaseHead from '$/components/layouts/BaseHead.astro'
import MainLayout from '$/components/layouts/MainLayout.astro'

const { content, showPageHeader = true } = Astro.props
---

<!DOCTYPE html>
<html lang={SITE.lang}>
  <head>
    <BaseHead
      title={`${content.title} | ${SITE.title}`}
      description={content.description}
    />
  </head>
  <MainLayout>
    {
      showPageHeader && (
        <div class="page__header">
          <h1 class="page__title">{content.title}</h1>
        </div>
      )
    }
    <slot />
  </MainLayout>

  <style>
    .page__header {
      @apply py-4 md:mb-10 mb-4;
    }
    .page__title {
      @apply font-menlo text-3xl font-extrabold text-theme-primary dark:text-theme-dark-primary;
    }
    .page__desc {
      @apply text-gray-400;
    }
  </style>
</html>
