---
import { SITE } from '$/config'
import BaseHead from '$/components/layouts/BaseHead.astro'
import MainLayout from '$/components/layouts/MainLayout.astro'
import { ViewTransitions } from 'astro:transitions'

const { content, showPageHeader = true, enableTransition = false } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead
      title={content.title ? `${SITE.title} | ${content.title}` : SITE.title}
      description={content.description}
      image={SITE.image}
    />
    {enableTransition && <ViewTransitions />}
  </head>
  <MainLayout>
    {
      showPageHeader && (
        <div class="page__header">
          <h1 class="page__title">{content.title}</h1>
        </div>
      )
    }
    <slot />
  </MainLayout>

  <style>
    .page__header {
      @apply py-4 mb-1;
    }
    .page__title {
      @apply text-5xl font-extrabold text-theme-primary dark:text-theme-dark-primary;
    }
    .page__desc {
      @apply text-gray-400;
    }
  </style>
</html>
